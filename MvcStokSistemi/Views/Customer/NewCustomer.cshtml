
@model MvcStokSistemi.Models.Entity.Tbl_Customer

@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">


    <h2>Customer Addition Screen</h2>

    <br />


    <label>Name</label>

    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
    <br />

    <label>Surname</label>
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Surname, "", new { @style = "color:red" })
    <br />

    <label>City</label>
    @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    <br />

    <label>Budget</label>
    @Html.TextBoxFor(x => x.Budget, new { @class = "form-control" })
    <br />


    <button class="btn btn-info">Save</button>

</form>