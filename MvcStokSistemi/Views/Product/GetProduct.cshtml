
@model MvcStokSistemi.Models.Entity.Tbl_Product

@{
    ViewBag.Title = "GetProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{

    <h2>Product Update Screen</h2>

    <br />
    <label>Product Name</label>

    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />

    <label>Brand</label>

    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })


    <label>Stock</label>

    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })



    <label>Purchase Price</label>

    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })



    <label>Selling Price</label>

    @Html.TextBoxFor(x => x.SellingPrice, new { @class = "form-control" })

    <label>Category</label>

    @Html.DropDownListFor(x => x.Tbl_Category.Id, (List<SelectListItem>)ViewBag.Categories, new { @class = "form-control" })
    <br />


    @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
    <button class="btn btn-warning">Update</button>

}
