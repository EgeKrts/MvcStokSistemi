
@model MvcStokSistemi.Models.Entity.Tbl_Customer

@{
    ViewBag.Title = "GetCustomer";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateCustomer", "Customer", FormMethod.Post))
{

    <h2>Customer Information Update Screen</h2>

    <br />

    <label>Name</label>

    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
   
    <br />

    <label>Surname</label>

    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
    <br />

    <label>City</label>

    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    <br />

    <label>Budget</label>

    @Html.TextBoxFor(m => m.Budget, new { @class = "form-control" })
    <br />


    @Html.HiddenFor(m => m.Id, new { @class = "form-control" })
    <button class="btn btn-warning">Update</button>

}